                <label asp-for="TeamPrincipalId" class="control-label"></label>
                <select asp-for="TeamPrincipalId" class ="form-control" asp-items="ViewBag.TeamPrincipalID"></select>
            </div>
            <div class="form-group">
                <label asp-for="PowerUnit" class="control-label"></label>
                <input asp-for="PowerUnit" class="form-control" />
                <span asp-validation-for="PowerUnit" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

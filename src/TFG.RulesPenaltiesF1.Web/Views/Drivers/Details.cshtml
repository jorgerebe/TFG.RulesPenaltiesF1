@model DriverViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Driver</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateBirth)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateBirth)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LicensePoints)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LicensePoints)
        </dd>
        @{
            if(Model.Competitor is not null)
            {
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Competitor)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Competitor!.Name)
                </dd>
            }
            else
            {
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Competitor)
                </dt>
                <dd class = "col-sm-10">
                    There is no team assigned to the driver at the moment
                </dd>
            }
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
